[Unit]
Description=Sovereign Athena Janitor
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/Sovereign-Sentinel
ExecStart=/home/ubuntu/Sovereign-Sentinel/.venv/bin/python3 athena_janitor.py
Restart=always
RestartSec=10
Environment="PATH=/home/ubuntu/Sovereign-Sentinel/.venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/ubuntu/Sovereign-Sentinel/.env

[Install]
WantedBy=multi-user.target
