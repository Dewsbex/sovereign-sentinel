[Unit]
Description=Sovereign Telegram Control
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/Sovereign-Sentinel
ExecStart=/usr/bin/python3 /home/ubuntu/Sovereign-Sentinel/telegram_listener.py
Restart=always
RestartSec=10
EnvironmentFile=/home/ubuntu/Sovereign-Sentinel/.env

[Install]
WantedBy=multi-user.target
